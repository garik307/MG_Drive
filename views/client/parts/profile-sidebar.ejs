<div class="card rounded rounded-4">
    <div class="card-body">
        <%
            let profileImageSrc = null;
            let nameInitial = 'U';
            let profileColorClass = 'bg-0';

            if(user) {
                if (user.name) {
                    nameInitial = user.name.charAt(0).toUpperCase();
                    let hash = 0;
                    for (let i = 0; i < user.name.length; i++) {
                    hash = user.name.charCodeAt(i) + ((hash << 5) - hash);
                    }
                    const index = Math.abs(hash) % 10;
                    profileColorClass = `bg-${index}`;
                }

                if (user.files) {
                    let foundImage = user.files.find(file => file.name_used === "user_img");
                    
                    if (foundImage) {
                        profileImageSrc = `../images/users/large/${foundImage.name}.${foundImage.ext}`;
                    }
                }
            }
            %>
        <div class="d-flex flex-column align-items-center text-center">
            <% if (profileImageSrc) { %>
            <img src="<%- profileImageSrc %>" alt="loading..." class="p-1 bg-primary profile-img mb-3"
                data-crop-trigger="user_avatar" width="120" height="120">
            <% } else { %>
            <div class="p-1 bg-primary profile-img mb-3 d-flex" data-crop-trigger="user_avatar"
                style="width: 120px; height: 120px;">
                <div class="profile-placeholder-img <%- profileColorClass %>">
                    <%- nameInitial %>
                </div>
            </div>
            <% } %>

            <%- include('cropImg.ejs', { cropId: 'user_avatar', filename: 'user_img', preview: true }) %>
            <div class="mt-3">
                <h4><%= user.name %></h4>
                <p class="text-secondary mb-1"><%= user.email %></p>
                <p class="text-muted font-size-sm"><%= user.address %></p>
            </div>
        </div>
        <hr class="my-4">
        <ul class="list-group list-group-flush mb-4">
            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="feather feather-instagram me-2 icon-inline text-danger">
                        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                        <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                    </svg>Instagram</h6>
                <a href="https://www.instagram.com/artik_avtodproc/" target="_blank"
                    class="text-secondary" rel="noopener noreferrer">artik_avtodproc</a>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                        stroke-linejoin="round" class="feather feather-facebook me-2 icon-inline text-primary">
                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z">
                        </path>
                    </svg>Facebook</h6>
                <a href="https://www.facebook.com/artikautoschool" target="_blank" class="text-secondary" rel="noopener noreferrer">Արթիկ
                    ավտոդպրոց</a>
            </li>
        </ul>

        <div class="d-grid gap-2">
            <% if(user.role === 'admin') { %>
            <a href="/admin" class="btn btn-outline-primary btn-action">
                <i class="fa-solid fa-gauge me-2"></i>
                Admin Panel
            </a>
            <% } %>
            <form action="/api/v1/user/logout" method="post" class="d-grid">
                <button type="submit" class="btn btn-outline-danger btn-action">
                    <i class="fa-solid fa-right-from-bracket me-2"></i>
                    Դուրս գալ
                </button>
            </form>
        </div>
    </div>
</div>