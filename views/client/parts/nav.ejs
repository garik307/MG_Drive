<% const companyName = (typeof contact !== 'undefined' && contact?.companyName) ? contact.companyName : 'MG Drive'; %>

<%
    let wh = [];
    if (typeof contact !== 'undefined' && contact?.workingHours) {
        wh = contact.workingHours;
        if (typeof wh === 'string') {
            try { wh = JSON.parse(wh); } catch(e) { wh = []; }
        }
    }
    
    const weekdays = wh.find(x => x.days.includes("mon"));
    const saturday = wh.find(x => x.days.includes("sat"));
    const sunday = wh.find(x => x.days.includes("sun"));
%>

<!-- Top Bar -->
<nav class="top-bar py-2 text-white bg-dark">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center align-items-center flex-wrap gap-3">
            <div class="contact-info d-flex gap-4 my-2 d-flex flex-wrap">
                <span><i class="fas fa-phone-alt me-2"></i><%= (typeof contact !== 'undefined' && contact?.phone) ? contact.phone : '+374 (93) 44-70-33' %></span>
                <span class="d-none d-sm-flex"><i class="fas fa-envelope me-2"></i>artikautoschool@gmail.com</span>
            </div>
            <div class="social-icons d-flex gap-3 my-2 order-unordered">
                <a href="<%= (typeof contact !== 'undefined' && contact?.facebook) ? contact.facebook : '#' %>"  target="_blank" class="text-white" aria-label="Facebook" rel="noopener noreferrer"><i class="fa-brands fa-facebook"></i></a>
                <a href="<%= (typeof contact !== 'undefined' && contact?.instagram) ? contact.instagram : '#' %>" target="_blank"  class="text-white" aria-label="Instagram" rel="noopener noreferrer"><i class="fa-brands fa-instagram"></i></a>
                <a href="<%= (typeof contact !== 'undefined' && contact?.whatsapp) ? contact.whatsapp : '#' %>" target="_blank"  class="text-white" aria-label="WhatsApp" rel="noopener noreferrer"><i class="fa-brands fa-whatsapp"></i></a>
            </div>
        </div>
    </div>
</nav>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top py-1">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center gap-3" href="/">
            <div class="logo-icon bg-opacity-10 w-25 text-white m-0 rounded-circle d-flex align-items-center">
                <picture style="display: contents;">
                    <source srcset="../images/favicon.webp" type="image/webp">
                    <img src="../images/favicon.png" alt="logo" loading="lazy" width="50" height="50">
                </picture>
            </div>
            <div class="d-flex flex-column fw-bold brand-text mb-0">
                <%= companyName %> 
                <span class="small text-primary brand-subtitle">ԱՎՏՈԴՊՐՈՑ</span>
            </div>
        </a>
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item"><a class="nav-link" href="/">Գլխավոր</a></li>
                <li class="nav-item"><a class="nav-link" href="/#about">Մեր մասին</a></li>
                <li class="nav-item"><a class="nav-link" href="/groups">Խմբեր</a></li>
                <li class="nav-item"><a class="nav-link" href="/tests">Թեստեր</a></li>
                <li class="nav-item"><a class="nav-link" href="/#reviews">Կարծիքներ</a></li>
                <li class="nav-item"><a class="nav-link" href="/#contact">Հետադարձ կապ</a></li>
            </ul>
            <div class="d-flex align-items-center gap-3">
            <% if (typeof user !== 'undefined' && user) { %>
                <%
                    let profileImageSrc = null;
                    let nameInitial = 'U';
                    let profileColorClass = 'bg-0';

                    if (user.name) {
                        nameInitial = user.name.charAt(0).toUpperCase();
                        
                        let hash = 0;
                        for (let i = 0; i < user.name.length; i++) {
                            hash = user.name.charCodeAt(i) + ((hash << 5) - hash);
                        }
                        
                        const index = Math.abs(hash) % 10;
                        profileColorClass = `bg-${index}`;
                    }

                    if (user.files) {
                        let foundImage = user.files.find(file => file.name_used === "user_img");
                        
                        if (foundImage) {
                            profileImageSrc = `../images/users/large/${foundImage.name}.${foundImage.ext}`;
                        }
                    }
                %>

                <a href="/profile" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="<%- user.name || 'Օգտվող' %>" class="rounded-circle profile-btn p-0 overflow-hidden d-flex align-items-center justify-content-center" aria-label="Profile">
                    <% if (profileImageSrc) { %>
                        <img src="<%- profileImageSrc %>" alt="<%- user.name || 'Օգտվող' %>" loading="lazy" class="w-100 h-100 object-fit-cover" width="50" height="50">
                    <% } else { %>
                        <div class="profile-placeholder-img d-flex align-items-center justify-content-center fw-bold text-white <%- profileColorClass %>">
                            <%- nameInitial %>
                        </div>
                    <% } %>
                </a>
                <% } else { %>
                <button type="button" class="btn-flash d-flex gap-2 align-items-center fw-bold" data-bs-target="#signIn_signUp" data-bs-toggle="modal"><span></span><i class="far fa-user-circle me-1"></i>Մուտք</button>
            <% } %> 
            </div>
        </div>
    </div>
</nav>