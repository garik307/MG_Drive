<div class="tab-pane fade" id="review" role="tabpanel" aria-labelledby="review-tab">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4">
                <h5 class="section-title mb-4">Ձեր Կարծիքը</h5>

                <% if (hasReview && myReview) { %>
                <!-- Existing Review -->
                <div class="text-center py-4">
                    <div class="mb-3">
                        <div class="d-inline-block bg-success bg-opacity-10 text-success rounded-circle p-3 mb-3">
                            <i class="fa-solid fa-check fs-2"></i>
                        </div>
                        <h4 class="fw-bold text-success">Դուք արդեն գնահատել եք</h4>
                    </div>

                    <div class="card border-0 bg-light p-4 text-start mx-auto" style="max-width: 500px;">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="text-warning fs-5">
                                <% for(let i=1; i<=5; i++) { %>
                                <i class="fa-<%= i <= myReview.rating ? 'solid' : 'regular' %> fa-star"></i>
                                <% } %>
                            </div>
                            <span class="text-muted small">
                                <%= new Date(myReview.date).toLocaleDateString('hy-AM') %>
                            </span>
                        </div>
                        <p class="mb-0 text-secondary fs-5 fst-italic">
                            "<%= myReview.comment %>"
                        </p>
                    </div>
                </div>
                <% } else { %>
                <!-- New Review Form -->
                <form id="profileReviewForm" class="manual-submit">
                    <input type="hidden" name="type" value="general">

                    <div class="mb-4 text-center">
                        <label class="form-label-custom mb-3 d-block">Գնահատեք մեզ</label>
                        <div class="rating-stars d-flex justify-content-center gap-2 fs-2 text-warning cursor-pointer">
                            <% for(let i=1; i<=5; i++) { %>
                            <div class="star-wrapper" data-value="<%= i %>">
                                <i class="fa-solid fa-star d-none"></i>
                                <i class="fa-regular fa-star"></i>
                            </div>
                            <% } %>
                        </div>
                        <input type="hidden" name="rating" id="ratingInput" required>
                        <div class="form-text text-center mt-2" id="ratingText">Ընտրեք աստղերը</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label-custom">Ձեր մեկնաբանությունը</label>
                        <textarea name="comment" class="form-control form-control-custom" rows="4"
                            placeholder="Գրեք ձեր կարծիքը դասընթացների և մեր ծառայությունների մասին..."
                            required></textarea>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill py-2 fw-semibold"
                            id="profileReviewSubmitBtn">
                            Ուղարկել Կարծիքը
                        </button>
                    </div>
                </form>
                <% } %>
            </div>
        </div>
    </div>
</div>