<!DOCTYPE html>
<html lang="hy">
    <head>
        <%- include('../parts/head.ejs') %>
    </head>
    <body>
        <!-- Modal -->
        <%- include('../parts/modal.ejs') %>
        <!-- Nav -->
        <%- include('../parts/nav.ejs') %>
        
        <%- include('../parts/nav_mobile.ejs') %>
        

        <!-- Mian content -->
        <main class="test-details-page" id="testRoot" data-test='<%= JSON.stringify(test || {}) %>'>
            <div class="container">
                <!-- Header Card -->
                <div class="test-header-card">
                    <div class="header-top">
                        <h1>Քննություն: <span id="testTitle">Թեստ №<%= test?.number || 0 %></span></h1>
                        <div class="timer-badge">
                            <i class="fa-regular fa-clock"></i>
                            <span id="timer">30:00</span>
                        </div>
                    </div>
                    <div class="header-info">
                        <span>Ընտրեք ճիշտ պատասխանը նկարագրված իրավիճակի համար:</span>
                        <span id="progressText">Հարց 1 / 20</span>
                    </div>
                    <div class="progress-wrapper">
                        <div class="progress-bar" id="progressBar" style="width: 5%"></div>
                    </div>
                </div>

                <!-- Content Grid -->
                <div class="test-content-grid">
                    <!-- Main Column -->
                    <div class="main-column">
                        <div class="question-card">
                            <div class="question-image-wrapper" id="imageWrapper" style="display: none;">
                                <img src="" alt="Question Image" id="questionImage">
                            </div>
                            <div class="question-text">
                                <h2 id="questionText">Հարցի տեքստը կհայտնվի այստեղ...</h2>
                            </div>
                        </div>

                        <!-- Answers (Moved here) -->
                        <div class="answers-section">
                            <div class="answers-list" id="answersList">
                                <!-- Options will be injected here -->
                            </div>
                        </div>

                        <button class="next-btn" id="nextBtn" disabled>
                            Հաջորդ հարցը <i class="fa-solid fa-arrow-right"></i>
                        </button>
                    </div>

                    <!-- Sidebar Column -->
                    <div class="sidebar-column">
                        <div class="questions-nav-card">
                            <h3>Ընթացքը</h3>
                            <div class="nav-grid" id="navGrid">
                                <!-- Nav items will be injected here -->
                            </div>
                            
                            <div class="nav-legend mt-4">
                                <div class="legend-item">
                                    <span class="dot current"></span> Ընթացիկ
                                </div>
                                <div class="legend-item">
                                    <span class="dot correct"></span> Ճիշտ
                                </div>
                                <div class="legend-item">
                                    <span class="dot wrong"></span> Սխալ
                                </div>
                                <div class="legend-item">
                                    <span class="dot pending"></span> Դեռ չի պատասխանել
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- Image Modal -->
        <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content" style="background: transparent; border: none;">
                    <div class="modal-body p-0 position-relative">
                        <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                        <img src="" id="modalImage" class="img-fluid rounded shadow-lg" style="width: 100%;">
                    </div>
                </div>
            </div>
        </div>

        <!-- Result Modal -->
        <div class="modal fade" id="resultModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content text-center p-4" style="border-radius: 20px;">
                    <div class="mb-3">
                        <i class="fa-solid fa-trophy text-warning" style="font-size: 48px;"></i>
                    </div>
                    <h3 class="mb-2">Արդյունքներ</h3>
                    <p class="text-muted mb-4">Դուք ավարտեցիք թեստը <span id="timeSpentBadge" class="badge bg-primary rounded-pill"></span></p>
                    
                    <div class="d-flex justify-content-center gap-4 mb-4">
                        <div class="text-success">
                            <div class="h2 mb-0" id="correctCount">0</div>
                            <small>Ճիշտ</small>
                        </div>
                        <div class="text-danger">
                            <div class="h2 mb-0" id="wrongCount">0</div>
                            <small>Սխալ</small>
                        </div>
                    </div>

                    <div class="score-circle mb-4" id="scoreCircle">
                        <div class="score-text">
                            <span id="scorePercent">0</span>%
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-center">
                        <a href="/tests" class="btn btn-outline-secondary px-4 text-dark">Դուրս գալ</a>
                        <button id="btnRetry" class="btn btn-primary px-4 text-white">Կրկնել</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer>
            <%- include('../parts/footer.ejs') %>
        </footer>
        
        <!-- Scripts -->    
        <%- include('../parts/scripts.ejs') %>
    </body>
</html>
