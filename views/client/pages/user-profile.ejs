<%
    let profileImageSrc = null;
    let nameInitial = 'U';
    let profileColorClass = 'bg-0';

    if(user) {
        if (user.name) {
             nameInitial = user.name.charAt(0).toUpperCase();
             
             let hash = 0;
             for (let i = 0; i < user.name.length; i++) {
                hash = user.name.charCodeAt(i) + ((hash << 5) - hash);
             }
             
             const index = Math.abs(hash) % 10;
             profileColorClass = `bg-${index}`;
        }

        if (user.files) {
            let foundImage = user.files.find(file => file.name_used === "user_img");
            
            if (foundImage) {
                profileImageSrc = `../images/users/large/${foundImage.name}.${foundImage.ext}`;
            }
        }
    }

    // Calculate Stats
    let passedTests = 0;
    let totalScore = 0;
    let avgScore = 0;
    if (testResults && testResults.length > 0) {
        passedTests = testResults.filter(r => r.status === 'passed').length;
        totalScore = testResults.reduce((acc, curr) => acc + (curr.score || 0), 0);
        avgScore = Math.round(totalScore / testResults.length);
    }
%>

