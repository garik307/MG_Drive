<%
    let profileImageSrc = null;
    let nameInitial = 'U';
    let profileColorClass = 'bg-0';

    if(user) {
        if (user.name) {
             nameInitial = user.name.charAt(0).toUpperCase();
             
             let hash = 0;
             for (let i = 0; i < user.name.length; i++) {
                hash = user.name.charCodeAt(i) + ((hash << 5) - hash);
             }
             
             const index = Math.abs(hash) % 10;
             profileColorClass = `bg-${index}`;
        }

        if (user.files) {
            let foundImage = user.files.find(file => file.name_used === "user_img");
            
            if (foundImage) {
                profileImageSrc = `../images/users/large/${foundImage.name}.${foundImage.ext}`;
            }
        }
    }

    // Calculate Stats
    let passedTests = 0;
    let totalScore = 0;
    let avgScore = 0;
    if (testResults && testResults.length > 0) {
        passedTests = testResults.filter(r => r.status === 'passed').length;
        totalScore = testResults.reduce((acc, curr) => acc + (curr.score || 0), 0);
        avgScore = Math.round(totalScore / testResults.length);
    }
%>

<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../parts/head.ejs') %>
    </head>
    <body>
        <!-- Modal -->
        <%- include('../parts/modal.ejs') %>
        <!-- Nav -->
        <%- include('../parts/nav.ejs') %>
        
        <%- include('../parts/nav_mobile.ejs') %>
        <!-- Main content -->
        <main class="py-4 mt-5">
            <div class="container user-profile-wrapper">
                <!-- 1. Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
                    <div class="mb-3">
                        <h2 class="fw-bold mb-1 header-title">Իմ Պրոֆիլը</h2>
                        <p class="text-muted mb-0">Կառավարեք ձեր անձնական տվյալները և հետևեք ուսումնական առաջընթացին</p>
                    </div>
                    <div class="d-flex gap-2 align-items-center flex-wrap">
                        <% if (user.role === 'student' && user.isPaid) { %>
                        <span
                            class="badge bg-warning bg-opacity-10 text-warning px-3 py-2 rounded-pill border border-warning border-opacity-25 d-flex align-items-center gap-2 me-2">
                            <i class="fa-solid fa-crown"></i> PRO Բաժանորդ
                        </span>
                        <% } else { %>
                        <span
                            class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill border border-success border-opacity-25 d-flex align-items-center gap-2 me-2">
                            <% 
                                        let roleLabel = 'Օգտվող';
                                        if (user.role === 'student') roleLabel = 'Ակտիվ Ուսանող';
                                        else if (user.role === 'admin') roleLabel = 'Ադմինիստրատոր';
                                        else if (user.role === 'team-member') roleLabel = 'Թիմի անդամ';
                                    %>
                            <i class="fa-solid fa-circle fa-2xs"></i> <%= roleLabel %>
                        </span>
                        <% } %>

                        <div class="dropdown">
                            <button
                                class="btn btn-light rounded-circle shadow-sm d-flex align-items-center justify-content-center"
                                type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                style="width: 40px; height: 40px;">
                                <i class="fa-solid fa-ellipsis-vertical text-secondary"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4 mt-2 p-2"
                                style="min-width: 200px;">
                                <% if(user.role === 'admin') { %>
                                <li>
                                    <a href="/admin"
                                        class="dropdown-item rounded-3 py-2 d-flex align-items-center gap-2 fw-medium mb-1">
                                        <i class="fa-solid fa-gauge text-primary"></i> Admin Panel
                                    </a>
                                </li>
                                <% } %>
                                <li>
                                    <form action="/api/v1/user/logout" method="post" class="d-block w-100">
                                        <button type="submit"
                                            class="dropdown-item rounded-3 py-2 d-flex align-items-center gap-2 text-danger fw-medium">
                                            <i class="fa-solid fa-right-from-bracket"></i> Դուրս գալ
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- 2. Main Profile Card -->
                <div class="card profile-header-card mb-4">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="profile-avatar-container">
                                <% if (profileImageSrc) { %>
                                <img src="<%- profileImageSrc %>" alt="Profile" class="profile-img-lg">
                                <% } else { %>
                                <div
                                    class="profile-img-lg d-flex align-items-center justify-content-center text-uppercase fw-bold placeholder-wrapper">
                                    <div class="profile-placeholder-img rounded-circle <%- profileColorClass %>">
                                        <%- nameInitial %>
                                    </div>
                                </div>
                                <% } %>
                                <% if (user.isPaid) { %>
                                <div class="pro-star-badge" title="PRO Բաժանորդ">
                                    <i class="fa-solid fa-star"></i>
                                </div>
                                <% } %>
                                <button class="btnStyle btn-edit-avatar position-absolute bottom-0 end-0 rounded-circle"
                                    data-crop-trigger="user_avatar">
                                    <i class="fa-solid fa-camera"></i>
                                </button>
                                <%- include('../parts/cropImg.ejs', { cropId: 'user_avatar', filename: 'user_img', preview: true }) %>
                            </div>
                        </div>
                        <div class="col-md ps-md-4">
                            <div class="profile-info">
                                <div class="d-flex align-items-center gap-3 mb-2">
                                    <h3 class="mb-0"><%= user.name %></h3>
                                    <span class="text-muted fs-6">| ID: #<%= user.id %></span>
                                </div>
                                <p class="text-muted mb-3"><%= user.role %> • B Կարգ</p>
                                <div class="d-flex flex-wrap gap-4 text-secondary">
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="fa-regular fa-calendar text-primary"></i>
                                        <span>Գրանցվել է՝ <%= new Date(user.createdAt).toLocaleDateString('hy-AM') %></span>
                                    </div>
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="fa-solid fa-location-dot text-primary"></i>
                                        <span><%= user.address || 'Հասցե նշված չէ' %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-auto mt-3 mt-md-0">
                            <button class="btnStyle px-4 py-2 rounded-pill fw-semibold text-white"
                                data-crop-trigger="user_avatar">
                                <i class="fa-solid fa-pen me-2"></i> Խմբագրել
                            </button>
                        </div>
                    </div>
                </div>

                <!-- 3. Stats Row -->
                <div class="row g-4 mb-4">
                    <!-- Tests Passed -->
                    <div class="col-md-6 col-lg-3">
                        <div class="card stat-card">
                            <div>
                                <div class="d-flex justify-content-between mb-2">
                                    <div class="stat-icon blue">
                                        <i class="fa-solid fa-clipboard-check"></i>
                                    </div>
                                    <span class="stat-trend positive h-25">+2 այս շաբաթ</span>
                                </div>
                                <div class="stat-value"><%= passedTests %></div>
                                <div class="stat-label">Հանձնած թեստեր</div>
                            </div>
                        </div>
                    </div>
                    <!-- Average Score -->
                    <div class="col-md-6 col-lg-3">
                        <div class="card stat-card">
                            <div>
                                <div class="d-flex justify-content-between mb-2">
                                    <div class="stat-icon purple">
                                        <i class="fa-solid fa-chart-simple"></i>
                                    </div>
                                </div>
                                <div class="stat-value"><%= avgScore %>%</div>
                                <div class="stat-label">Միջին գնահատական</div>
                            </div>
                        </div>
                    </div>
                    <!-- Course Progress -->
                    <div class="col-md-6 col-lg-3">
                        <div class="card stat-card">
                            <div>
                                <div class="d-flex justify-content-between mb-2">
                                    <div class="stat-icon orange">
                                        <i class="fa-solid fa-graduation-cap"></i>
                                    </div>
                                    <span class="text-muted small">4/20</span>
                                </div>
                                <div class="stat-value">20%</div>
                                <div class="stat-label">Դասընթացի ավարտ</div>
                            </div>
                        </div>
                    </div>
                    <!-- Continue Action -->
                    <div class="col-md-6 col-lg-3">
                        <div class="card action-card h-100 p-4 d-flex flex-row align-items-center justify-content-between cursor-pointer"
                            onclick="window.location.href='/groups'">
                            <div>
                                <div class="play-button mb-3">
                                    <i class="fa-solid fa-play fa-lg"></i>
                                </div>
                                <h4 class="fw-bold mb-1">Սկսել ուսուցումը</h4>
                                <p class="mb-0 opacity-75 small">Դիտել խմբերը</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 4. Navigation Tabs -->
                <div class="card p-1 mb-4 d-inline-block bg-white border-0 profile-nav-tabs-container">
                    <ul class="nav nav-pills nav-pills-custom" id="profileTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="overview-tab" data-bs-toggle="tab"
                                data-bs-target="#overview" type="button" role="tab">
                                <i class="fa-solid fa-layer-group me-2"></i>Անձնական տվյալներ
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#history"
                                type="button" role="tab">
                                <i class="fa-solid fa-clock-rotate-left me-2"></i>Թեստեր
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="groups-tab" data-bs-toggle="tab" data-bs-target="#groups"
                                type="button" role="tab">
                                <i class="fa-solid fa-users-rectangle me-2"></i>Խմբեր
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="review-tab" data-bs-toggle="tab" data-bs-target="#review"
                                type="button" role="tab">
                                <i class="fa-solid fa-star me-2"></i>Կարծիք
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="payment-tab" data-bs-toggle="tab" data-bs-target="#payment"
                                type="button" role="tab">
                                <i class="fa-solid fa-credit-card me-2"></i>Վճարում
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings"
                                type="button" role="tab">
                                <i class="fa-solid fa-gear me-2"></i>Կարգավորումներ
                            </button>
                        </li>
                    </ul>
                </div>

                <!-- 5. Tab Content -->
                <div class="tab-content" id="profileTabsContent">

                    <!-- OVERVIEW TAB -->
                    <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
                        <div class="row g-4">
                            <!-- Left: Personal Data Form -->
                            <div class="col-lg-8">
                                <div class="card p-4 h-100">
                                    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
                                        <h5 class="section-title mb-3 mb-sm-0">Անձնական Տվյալներ</h5>
                                        <button class="btn btn-link text-white text-decoration-none fw-semibold"
                                            type="button" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                                            Փոխել գաղտնաբառը
                                        </button>
                                    </div>

                                    <form action="/api/v1/user/updateme" method="patch" enctype="multipart/form-data"
                                        class="form-user-update manual-submit">
                                        <div class="row g-4">
                                            <div class="col-md-6">
                                                <label class="form-label-custom">Անուն</label>
                                                <div class="input-group">
                                                    <span
                                                        class="input-group-text bg-transparent border-0 position-absolute start-0 top-50 translate-middle-y ps-3 input-icon-wrapper">
                                                        <i class="fa-regular fa-user"></i>
                                                    </span>
                                                    <input type="text" id="nameInput" name="name"
                                                        class="form-control form-control-custom ps-5"
                                                        value="<%= user.name || '' %>">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label-custom">Էլ․ փոստ</label>
                                                <div class="input-group">
                                                    <span
                                                        class="input-group-text bg-transparent border-0 position-absolute start-0 top-50 translate-middle-y ps-3 input-icon-wrapper">
                                                        <i class="fa-regular fa-envelope"></i>
                                                    </span>
                                                    <input type="email" name="email"
                                                        class="form-control form-control-custom ps-5"
                                                        value="<%= user.email || '' %>">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label-custom">Հեռախոսահամար</label>
                                                <div class="input-group">
                                                    <span
                                                        class="input-group-text bg-transparent border-0 position-absolute start-0 top-50 translate-middle-y ps-3 input-icon-wrapper">
                                                        <i class="fa-solid fa-phone"></i>
                                                    </span>
                                                    <input type="text" name="phone"
                                                        class="form-control form-control-custom ps-5"
                                                        value="<%= user.phone || '' %>">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label-custom">Հասցե</label>
                                                <div class="input-group">
                                                    <span
                                                        class="input-group-text bg-transparent border-0 position-absolute start-0 top-50 translate-middle-y ps-3 input-icon-wrapper">
                                                        <i class="fa-solid fa-map-pin"></i>
                                                    </span>
                                                    <input type="text" name="address"
                                                        class="form-control form-control-custom ps-5"
                                                        value="<%= user.address || '' %>">
                                                </div>
                                            </div>

                                            <div class="col-12 mt-4">
                                                <button type="submit"
                                                    class="btn btn-primary rounded-pill px-3 py-2 fw-semibold text-white">
                                                    Պահպանել
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <!-- Right: Recent Tests -->
                            <div class="col-lg-4">
                                <div class="card p-4 h-100">
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <h5 class="section-title mb-0">Վերջին Թեստերը</h5>
                                        <a href="#" class="text-primary text-decoration-none small fw-bold"
                                            onclick="document.getElementById('history-tab').click()">Բոլորը <i
                                                class="fa-solid fa-arrow-right ms-1"></i></a>
                                    </div>

                                    <% if (testResults && testResults.length > 0) { %>
                                    <% testResults.slice(0, 4).forEach(result => { %>
                                    <div class="recent-test-item">
                                        <div class="test-icon <%= result.status === 'passed' ? 'passed' : 'failed' %>">
                                            <i
                                                class="fa-solid <%= result.status === 'passed' ? 'fa-check' : 'fa-xmark' %>"></i>
                                        </div>
                                        <div class="test-info">
                                            <h6 class="text-truncate recent-test-title">Թեստ
                                                <%= result.test ? result.test.number : 'N/A' %></h6>
                                            <span
                                                class="test-date"><%= new Date(result.createdAt).toLocaleDateString('hy-AM', {month:'short', day:'numeric', hour:'2-digit', minute:'2-digit'}) %></span>
                                        </div>
                                        <div class="test-score <%= result.status === 'passed' ? 'passed' : 'failed' %>">
                                            <%= result.score %>%
                                            <div class="small text-uppercase pass-status">
                                                <%= result.status === 'passed' ? 'PASS' : 'FAIL' %></div>
                                        </div>
                                    </div>
                                    <% }); %>
                                    <% } else { %>
                                    <p class="text-muted text-center py-4">Դուք դեռ չեք հանձնել թեստեր</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- HISTORY TAB -->
                    <%- include('../tabs/profile-history-tab.ejs'); %>
                    <!-- GROUPS TAB -->
                    <%- include('../tabs/profile-groups-tab.ejs'); %>
                    <!-- PAYMENT TAB -->
                    <%- include('../tabs/profile-payment-tab.ejs'); %>
                    <!-- REVIEW TAB -->
                    <%- include('../tabs/profile-review-tab.ejs'); %>
                    <!-- SETTINGS TAB -->
                    <%- include('../tabs/profile-settings-tab.ejs'); %>
                </div>
            </div>
        </main>
        <!-- Change Password Modal -->
        <div class="modal fade user-profile-wrapper" id="changePasswordModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content rounded-4 border-0">
                    <div class="modal-header border-0 pb-0">
                        <h5 class="modal-title fw-bold text-white">Փոխել գաղտնաբառը</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body pt-4">
                        <form class="form-password-update manual-submit">
                            <div class="mb-3">
                                <label class="form-label-custom">Ընթացիկ գաղտնաբառ</label>
                                <input type="password" class="form-control form-control-custom" name="passwordCurrent"
                                    required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label-custom">Նոր գաղտնաբառ</label>
                                <input type="password" class="form-control form-control-custom" name="password" required
                                    minlength="8">
                            </div>
                            <div class="mb-3">
                                <label class="form-label-custom">Հաստատել նոր գաղտնաբառը</label>
                                <input type="password" class="form-control form-control-custom" name="passwordConfirm"
                                    required minlength="8">
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary rounded-pill py-2">Թարմացնել</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer -->
        <footer>
            <%- include('../parts/footer.ejs') %>
        </footer>
        <!-- Scripts -->
        <%- include('../parts/scripts.ejs') %>
    </body>
</html>