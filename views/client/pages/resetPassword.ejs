<!DOCTYPE html>
<html lang="hy">
     <head>
        <%- include('../parts/head.ejs') %>
    </head>
    <body>
        <!-- Modal -->
        <%- include('../parts/modal.ejs') %>
        <!-- Nav menu -->
        <%- include('../parts/nav.ejs') %>
        
        <%- include('../parts/nav_mobile.ejs') %>
        
        <!-- Main content -->
        <main class="d-flex align-items-center justify-content-center" style="min-height: 80vh; padding-top: 100px;">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-5">
                        <div class="card shadow-lg border-0 rounded-4">
                            <div class="card-body p-5">
                                <div class="text-center mb-4">
                                    <h3 class="fw-bold text-dark">Վերականգնել գաղտնաբառը</h3>
                                    <p class="text-muted small">Մուտքագրեք Ձեր նոր գաղտնաբառը</p>
                                </div>
                                
                                <form id="resetPasswordForm" class="needs-validation" data-token="<%= token %>" novalidate>
                                    <!-- New Password -->
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Նոր գաղտնաբառ</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" id="password" name="password" minlength="6" required>
                                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                                <i class="fa-solid fa-eye"></i>
                                            </button>
                                        </div>
                                        <div class="invalid-feedback">
                                            Գաղտնաբառը պետք է լինի առնվազն 6 նիշ։
                                        </div>
                                    </div>

                                    <!-- Confirm Password -->
                                    <div class="mb-4">
                                        <label for="passwordConfirm" class="form-label">Հաստատել գաղտնաբառը</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" minlength="6" required>
                                        </div>
                                        <div class="invalid-feedback">
                                            Գաղտնաբառերը չեն համընկնում։
                                        </div>
                                    </div>
                                    <!-- Submit -->
                                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                                        Պահպանել գաղտնաբառը
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- Scripts -->
        <%- include('../parts/scripts.ejs') %>
    </body>
</html>
