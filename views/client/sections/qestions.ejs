<section class="py-5 faq" id="faq">
    <div class="container">
        <!-- Header -->
        <div class="text-center mb-5 faq-header">
            <h2 class="display-4 fw-bold mb-3">Հաճախ հանդիպող <span class="text-gradient"> հարցեր</span></h2>
            <p class="lead text-muted mx-auto text-title">Տեղեկացեք ամենակարևոր մանրամասների մասին</p>
        </div>
        <!-- FAQ Cards -->
        <div class="card p-4 mb-3 faq-card rounded-3">
            <div class="accordion" id="faqAccordion">
                <% if (typeof faqs !== 'undefined' && faqs.length > 0) { %>
                    <% faqs.forEach((faq, index) => { %>
                        <div class="accordion-item mb-3">
                            <h2 class="accordion-header" id="heading<%= faq.id %>">
                                <button class="accordion-button collapsed fw-semibold" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapse<%= faq.id %>" aria-expanded="false" aria-controls="collapse<%= faq.id %>">
                                    <%= faq.question %>
                                </button>
                            </h2>
                            <div id="collapse<%= faq.id %>" class="accordion-collapse collapse" aria-labelledby="heading<%= faq.id %>"
                                data-bs-parent="#faqAccordion">
                                <div class="accordion-body text-muted" style="white-space: pre-line;">
                                    <%= faq.answer %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-center text-muted">Հարցեր չեն գտնվել։</p>
                <% } %>
            </div>
        </div>
        <!-- Call to Action -->
        <div class="text-center scroll_animate mt-5">
            <h3 class="fw-bold mb-3">Կա՞ն լրացուցիչ հարցեր?</h3>
            <p class="text-muted mb-4">Մենք միշտ պատրաստ ենք օգնել! Դիմեք մեզ և եկեք խոսենք։</p>
            <div class="d-flex flex-wrap justify-content-center gap-3">
                <a href="#contact" class="btn-animated btn-primary">Կապ հաստատել</a>
            </div>
        </div>
    </div>
</section>